generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id       String    @id @default(uuid())
  content  String    @db.Text()
  tags     Tag[]
  comments Comment[]
}

model Comment {
  id      String  @id @default(uuid())
  content String  @db.Text()
  postId  String?
  post    Post?   @relation(fields: [postId], references: [id])

  @@index([postId])
}

model Tag {
  name   String  @id @default(uuid())
  postId String?
  Post   Post?   @relation(fields: [postId], references: [id])

  @@index([postId])
}
