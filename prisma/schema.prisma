generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id       Int       @id @default(autoincrement())
  tags     Tag[]
  comments Comment[]
}

model Comment {
  id     Int   @id
  Post   Post? @relation(fields: [postId], references: [id]) // A comment can have one post
  postId Int?
}

model Tag {
  name   String @id
  Post   Post?  @relation(fields: [postId], references: [id])
  postId Int?
}
